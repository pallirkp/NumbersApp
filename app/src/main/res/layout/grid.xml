<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

<TextView android:layout_height="40dp" android:layout_width="177dp" android:text="First Number"
    android:layout_column="0" android:layout_row="0" android:id="@+id/tv1"
    android:textSize="20sp">
</TextView>
 <EditText android:layout_height="40dp"  android:layout_width="180dp" android:id="@+id/ed1"
     android:layout_column="1" android:layout_row="0" android:hint="Enter First Number">
 </EditText>

    <TextView android:layout_height="40dp" android:layout_width="178dp" android:text="Second Number"
        android:layout_column="0" android:layout_row="1" android:id="@+id/tv2"
        android:textSize="20sp">
    </TextView>

    <EditText android:layout_height="40dp"  android:layout_width="195dp" android:id="@+id/ed2"
        android:layout_column="1" android:layout_row="1" android:hint="Enter Second Number" >
    </EditText>

    <TextView android:layout_height="40dp" android:layout_width="178dp" android:text="Result :"
        android:layout_column="0" android:layout_row="2" android:id="@+id/tv3"
        android:textSize="20sp">
    </TextView>
    <EditText android:layout_height="40dp"  android:layout_width="195dp" android:id="@+id/ed3"
        android:layout_column="1" android:layout_row="2" android:hint="See Result here" >
    </EditText>
    <Button android:text="Add" android:id="@+id/add"
        android:layout_column="0" android:layout_row="3" android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:onClick="addNum"
        />
    <Button android:text="Sub" android:id="@+id/subtract" android:textSize="20sp"
        android:layout_column="1" android:layout_row="3" android:layout_gravity="center_horizontal"
        android:onClick="subNum"
        />
    <Button android:text="Mul" android:id="@+id/multiply" android:textSize="20sp"
        android:layout_column="0" android:layout_row="4" android:layout_gravity="center_horizontal"
        android:onClick="mulNum"/>
    <Button android:text="Div" android:id="@+id/division" android:textSize="20sp"
        android:layout_column="1" android:layout_row="4" android:layout_gravity="center_horizontal"
        android:onClick="divNum"/>
</GridLayout>